<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:gravity="center"
    tools:context="com.demo.app.StickyActivity">


    <Button
        android:id="@+id/btn_scrolling_view"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="scrolling" />


    <Button
        android:id="@+id/btn_sticky"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="sticky" />

    <Button
        android:id="@+id/btn_height_match_parent"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="height(match_parent)" />

    <Button
        android:id="@+id/btn_height_exactly"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="height(exactly)" />


    <Button
        android:id="@+id/btn_refresh_as_parent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="refresh as parent" />

    <Button
        android:id="@+id/btn_refresh_as_child"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="refresh as child" />

    <Button
        android:id="@+id/btn_view_pager"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="ViewPager2" />


    <Button
        android:id="@+id/btn_scroll_view"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="ScrollView" />

    <Button
        android:id="@+id/btn_web_view"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:text="WebView" />

</LinearLayout>