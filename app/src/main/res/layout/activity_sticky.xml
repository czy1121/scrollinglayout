<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <me.reezy.cosmo.scrollinglayout.ScrollingLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.demo.app.StickyActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="scroll"
            android:textColor="@color/white" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="sticky 1"
            android:textColor="@color/white"
            app:layout_sticky="sticky" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_green_light"
            android:gravity="center"
            android:text="scroll"
            android:textColor="@color/white"
            app:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:text="sticky 2"
            android:textColor="@color/white"
            app:layout_sticky="sticky" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:text="scroll"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:onClick="onClick"
            android:text="permanent 1"
            android:textColor="@color/white"
            app:layout_sticky="permanent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center"
            android:text="scroll"
            android:textColor="@color/white" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/holo_green_light"
            android:gravity="center"
            android:text="scroll"
            android:textColor="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/black"
            android:gravity="center"
            app:layout_sticky="permanent"
            android:text="permanent 2"
            android:textColor="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/black"
            android:gravity="center"
            android:text="scroll"
            android:textColor="@color/white" />


    </me.reezy.cosmo.scrollinglayout.ScrollingLayout>
</LinearLayout>